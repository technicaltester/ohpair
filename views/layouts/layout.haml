%html{:lang => "en"}
  %head
    %title Index
    :css
      body{
      text-align:center;
      font-family:Helvetica,Futura,Arial,Verdana,sans-serif;
      width:100%;
      background:#d2d4d8;
      }

      #footer{
      margin: 0 auto;
      margin-top:20px;
      text-align:left;
      width:80%;
      }

      #container{
      margin: 0 auto;
      margin-top:20px;
      text-align:left;
      width:80%;
      }

      .well{
      min-height:20px;
      padding:19px;
      margin-bottom:20px;
      background-color:#9ba0a8;
      border:1px 
      solid #101214;-webkit-border-radius:4px;
      -moz-border-radius:4px;
      border-radius:4px;
      -webkit-box-shadow:inset 0 1px 1px rgba(0, 0, 0, 0.05);
      -moz-box-shadow:inset 0 1px 1px rgba(0, 0, 0, 0.05);
      box-shadow:inset 0 1px 1px rgba(0, 0, 0, 0.05);
      }


      table {
      max-width:100%;
      background-color:transparent;
      border-collapse:collapse;
      border-spacing:0;
      }
      th, td {
      width: 25%;
      text-align: left;
      vertical-align: top;
      border: 1px solid #000;
      border-collapse: collapse;
      padding: 0.3em;
      caption-side: bottom;
      }
      caption {
      padding: 0.3em;
      color: #fff;
      background: #000;
      }
      th {
      background: #808690;
      text-align: center;
      }
